<p id="notice"><%= notice %></p>

<h1>Attractions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attractions.each do |attraction| %>
      <tr>
        <td><%= link_to "Go on #{attraction.name}", attraction if !logged_in_as_admin? %></td>
        <td><%= link_to("Show #{attraction.name}", attraction) if logged_in_as_admin? %></td>
        <td><%= link_to('Edit', edit_attraction_path(attraction)) if logged_in_as_admin? %></td>
        <td><%= link_to('Destroy', attraction, method: :delete, data: { confirm: 'Are you sure?' }) if logged_in_as_admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Attraction', new_attraction_path) if logged_in_as_admin? %>
